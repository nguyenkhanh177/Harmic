@model Harmic.Models.TbProduct

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Chi tiết</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Chi tiết </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Edit">
                            <input type="hidden" asp-for="ProductId" />
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Title" class="control-lable">Tiêu đề</label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Alias" class="control-lable">Alias</label>
                                    <input asp-for="Alias" class="form-control" />
                                    <span asp-validation-for="Alias" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CategoryProductId" class="control-lable">Danh mục</label>
                                    <select asp-for="CategoryProductId" class="form-control" asp-items="ViewBag.CategoryProductId">
                                        <option value="0" selected>--[CHọn danh mục]--</option>
                                    </select>
                                </div>
                                <div>
                                    <label asp-for="Image" class="form-control">Ảnh</label>
                                    <div input-group mb-3>
                                        <input type="text" class="form-control" id="file_input" asp-for="Image" aria-describedby="button" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-lable">Mô tả:</label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Detail" class="control-lable">Chi tiết:</label>
                                    <input asp-for="Detail" class="form-control" />
                                    <span asp-validation-for="Detail" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price" class="control-lable">Giá</label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PriceSale" class="control-lable">Giá giảm</label>
                                    <input asp-for="PriceSale" class="form-control" />
                                    <span asp-validation-for="PriceSale" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Quantity" class="control-lable">Số lượng</label>
                                    <input asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Star" class="control-lable">Số sao</label>
                                    <input asp-for="Star" class="form-control" />
                                    <span asp-validation-for="Star" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsNew" /> Sản phẩm mới
                                    </label>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsBestSeller" /> Sản phẩm mới
                                    </label>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsActive" /> Hiện thị
                                    </label>
                                </div>
                                <div class="form-group">
                                    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                                </div>

                            </div>
                            <!-- /.card-body -->
                        </form>
                    </div>
                </div>
            </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->