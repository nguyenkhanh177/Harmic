@model Harmic.Models.TbProduct

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xóa Menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xóa menu</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tiêu đề:</label>
                                @Html.DisplayFor(model => model.Title)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Danh mục</label>
                                @Html.DisplayFor(model => model.CategoryProduct.Title)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Ảnh</label>
                                <img src="~/assets/images/product/270x300/@Model.Image" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Mô tả:</label>
                                @Html.DisplayFor(model => model.Description)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Chi tiết:</label>
                                @Html.DisplayFor(model => model.Detail)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Giá</label>
                                @Html.DisplayFor(model => model.Price)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Giá giảm</label>
                                @Html.DisplayFor(model => model.PriceSale)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Số lượng</label>
                                @Html.DisplayFor(model => model.Quantity)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Sản phẩm mới</label>
                                @Html.DisplayFor(model => model.IsNew)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Bán chạy</label>
                                @Html.DisplayFor(model => model.IsBestSeller)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Số sao</label>
                                @Html.DisplayFor(model => model.Star)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Hiện</label>
                                @Html.DisplayFor(model => model.IsActive)
                            </div>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ProductId" />
                                <input type="submit" value="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');" class="btn btn-danger" /> |
                                <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->